extends layout

block content
  #app
    p test
    #attributes
      h2 Attributes
      // TODO: Think about moving this into the 3 attribute categories so it's more modular for grid construction
      .attributeGroup(v-for="(value, group) in attributes")
        p {{group}} - {{ value }}
        p {{ attributeAllocations[group] }}
        dotscale(v-for="(value, key) in attributes[group]", v-model="value", :stat="key", @input="attributes[group][key] = value")
